---
import Steps from "@components/Steps/Steps.astro";
import Title from "@components/Title.astro";

const { default: ZoomCall } = await import("@images/svgs/zoomcall.svg?raw");
---

<section class="w-full text-center flex flex-col items-center mb-8 sm:mb-16 xl:m pt-[2rem] md:pt-[12vw] lg:pt-0 px-4 md:px-8">
  <div
    class="text-center mx-auto md:w-[600px] xl:w-[700px] flex flex-col justify-center items-center"
  >
    <Title>
      Personalized, human <span class="text-primary">Connection</span>
    </Title>
    <div
      class="text-neutral-500 text-lg lg:text-xl xl:text-2xl sm:text-lg mt-6"
    >
      A short call with our talent manager can help you identify your strengths and weaknesses, 
      and provide you with actionable steps to achieve your career goals.
    </div>
  </div>
  <div class="mt-8 w-full md:w-9/12 lg:w-5/12 xl:w-4/12">
    <Fragment set:html={ZoomCall} />
  </div>
  <Steps step="3" highlight="Get matched" fromColor="from-warning-400" toColor="to-secondary-color3" />
</section>