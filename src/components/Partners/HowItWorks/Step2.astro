---
import GradientText from "@components/GradientText.astro";
import Steps from "@components/Steps/Steps.astro";
import Title from "@components/Title.astro";
import zoomCall from "@images/svgs/zoomcall.svg";
---

<section
  class="w-full text-center flex flex-col items-center mb-8 sm:mb-16 xl:m pt-[2rem] md:pt-[12vw] lg:pt-0 px-12"
>
  <div
    class="text-center mx-auto md:w-[600px] xl:w-[700px] flex flex-col justify-center items-center"
  >
    <Title>
      <GradientText
        fromColor="from-secondary-color3"
        toColor="to-primary-active"
        text="Connect"
      />
      with Candidates
    </Title>
    <div
      class="text-neutral-500 text-lg lg:text-xl xl:text-2xl sm:text-lg mt-6"
    >
      With Hachiko Labs, you have the ability to communicate directly with any
      candidate who is identified as a match, we strive to establish authentic
      connections, allowing us to understand their needs, motivations, and
      aspirations.
    </div>
  </div>
  <div class="mt-8 w-full md:w-7/12 lg:w-5/12 xl:w-4/12">
    <img src={zoomCall} alt="first call interview" />
  </div>
  <Steps
    step="3"
    highlight="Get Support"
    fromColor="from-warning-400"
    toColor="to-secondary-color3"
  />
</section>
