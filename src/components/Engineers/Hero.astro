---
import { Button } from "@hachiko-labs/ui-components";

import HeroTitle from "@components/HeroTitle.astro";
import { Slider } from "@components/Slider";
import Steps from "@components/Steps/Steps.astro";
import GradientText from "../GradientText.astro";

const logos = [
  { icon: "/assets/nextjs.svg", alt: "Next JS" },
  { icon: "/assets/React.svg", alt: "React" },
  { icon: "/assets/Angular.svg", alt: "Angular" },
  { icon: "/assets/Svelte.svg", alt: "Svelte" },
  { icon: "/assets/Astro.svg", alt: "Astro" },
  { icon: "/assets/NodeJS.svg", alt: "Node JS" },
];
---

<section class="w-screen flex items-center justify-center text-center pb-12">
  <div
    class="w-full md:w-[800px] xl:w-[900px] flex flex-col justify-center items-center pt-52 px-4 md:px-8"
  >
    <HeroTitle>
      <span class="inline">Take Your</span>
      <GradientText
        text="Engineering"
        fromColor="from-primary-active"
        toColor="to-secondary-color3"
      />
      <span class="inline">Career to the Next Level</span>
    </HeroTitle>
    <div
      class="text-neutral-500 text-lg lg:text-xl xl:text-2xl sm:text-lg mt-6 px-9 md:px-20 lg:px-24 xl:px-44"
    >
      We offer exciting opportunities to work on cutting-edge projects with
      top-tier US startups
    </div>
    <div class="flex flex-col sm:flex-row my-16 sm:my-12 justify-center">
      <Button client:visible type="primary" id="apply-now">
        Join the waitlist
      </Button>
    </div>
    <div
      class="flex flex-wrap flex-col items-center gap-y-6 px-4 mb-16 sm:mb-12"
    >
      <div
        class="text-neutral-500 text-lg lg:text-xl xl:text-2xl sm:text-lg mt-6 px-9 md:px-20 lg:px-24 xl:px-44"
      >
        Working with great technologies
      </div>
      <div
        class="w-[60vw] md:w-[50vw] sm:w-[80vw] relative flex flex-wrap items-center justify-center gap-x-14 gap-y-6 overflow-hidden before:w-20 before:bg-gradient-to-l before:from-white before:to-transparent before:top-0 before:bottom-0 before:content-[''] before:z-10 before:absolute before:right-0 after:w-20 after:bg-gradient-to-r after:from-white after:to-transparent after:top-0 after:bottom-0 after:content-[''] after:z-10 after:absolute after:left-0"
      >
        <Slider>
          <ul class="flex gap-12">
            {logos.map(({ icon, alt }) => (
              <li class="flex items-center justify-center">
                <img src={icon} alt={alt} width="44" />
              </li>
            ))}
          </ul>
        </Slider>
      </div>
    </div>
    <div id="how-it-works">
      <Steps
        title="How it works"
        step="1"
        highlight="Apply"
        fromColor="from-neutral"
        toColor="to-primary-active"
      />
    </div>
  </div>
</section>

<script type="module">
  const handleOnClick = () => {
    console.log("Hello World");
  };

  const applyNowButton = document.getElementById("apply-now");
  applyNowButton.addEventListener("click", handleOnClick);
</script>
