---
import { Sprite } from 'astro-icon';

interface Item {
  title: string;
  href: string;
}

export interface Props {
  footerData: {
    title: string;
    items?: Item[];
  }[];
}

const { footerData } = Astro.props;
---

<footer>
  <div class="pt-10 lg:pt-20 lg:pb-12 bg-neutral-200 radius-for-skewed border-t border-neutral-300">
    <div class="container mx-auto px-4 w-4/5 md:w-11/12 lg:w-10/12 xl:w-4/5 2xl:w-2/3">
      <div class="flex flex-wrap">
        <div class="w-full lg:w-1/3 mb-16 lg:mb-0">
          <div class="flex justify-center lg:justify-start items-center grow basis-0">
            <div class="text-white mr-2 text-6xl">
              <div class="flex justify-start sm:justify-center grow basis-0">
                <div class="mr-2 text-6xl">
                  <svg width="30" height="30" viewBox="0 0 181 148" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="0.642578" y="0.873047" width="179.381" height="42.433" rx="21.2165" fill="#3027D9"/>
                    <rect x="23.0649" y="52.3988" width="134.536" height="42.433" rx="21.2165" fill="#4A3AFF"/>
                    <rect x="52.9624" y="105.44" width="74.7423" height="42.433" rx="21.2165" fill="#7663FF"/>
                  </svg>
                </div>
                <div class="font-['Inter'] flex gap-1 font-bold text-xl text-neutral">
                  <div class="text-xl">
                    Hachiko
                  </div>
                  <div class="text-primary text-xl">
                    Labs
                  </div>
                </div>
              </div>
            </div>
          </div>
          <p class="mb-10 mt-4 sm:w-[22rem] lg:w-[20rem] xl:w-[24rem] text-gray-400 leading-loose text-center lg:text-left mx-auto lg:mx-0">
            Your Dream Job, Your Dream Team: Made Easy!
          </p>
          <div class="w-full mx-auto flex justify-center sm:justify-start">
            <a
              class="inline-block w-10 h-10 mr-2 p-2"
              href="#"
            >
              <Sprite pack="mdi" name="linkedin" style="width: 28px; height: 28px;" class="text-neutral-500 hover:text-neutral-600" />
            </a>
            <a
            class="inline-block w-10 h-10 mr-2 p-2"
              href="#"
            >
              <Sprite pack="mdi" name="github" style="width: 28px; height: 28px;" class="text-neutral-500 hover:text-neutral-600" />
            </a>
          </div>
        </div>
        <div class="w-full lg:w-2/3  lg:pl-16 hidden lg:flex flex-wrap justify-between">
          {footerData.map(data => (
            <div class="w-full md:w-1/3 lg:w-auto mb-16 md:mb-0">
              <h3 class="mb-6 text-2xl font-bold text-neutral">{data.title}</h3>
              <ul>
                {data.items.map(item => (
                  <li class="mb-4">
                    <a
                      class="text-gray-400 hover:text-gray-300"
                      href={item.href}
                    >
                      {item.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
      <p class="lg:text-center text-sm text-gray-400 border-t border-[rgb(255,255,255,0.2)] pt-12 mt-16 hidden lg:block">
        &copy; {new Date().getFullYear()}. Hachiko Labs
      </p>
    </div>
  </div>
</footer>